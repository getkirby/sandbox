{
    "name": "genxbe/kirby3-ray",
    "type": "kirby-plugin",
    "license": "MIT",
    "description": "Helper tool that enables ray on all the extendable methods.",
    "authors": [
        {
            "name": "Sam Serrien",
            "email": "source@genx.be"
        }
    ],
    "require": {
        "getkirby/composer-installer": "^1.2",
        "spatie/ray": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "X\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    }
}
